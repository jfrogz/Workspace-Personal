.botones {
    -fx-background-color:  #108596;
    -fx-border-color:  	 #108596;
    -fx-border-radius: 2px;   
    -fx-font-size: 12px;
    -fx-text-fill: #ffffff;
     
     
}
#btnNuevoUsuario, #btnNuevoPermiso, #btnNuevoPerfil{          
    -fx-background-image: url("../img/agregar.png");
    -fx-background-size: 18 18;
    -fx-background-repeat: no-repeat;
    -fx-background-position:left;   
}
.txtEtiquetas{
    -fx-text-fill: #1859a7;
    -fx-font-size: 12px;
    -fx-font-family: Arial; 
    
}
.fondo{
    -fx-background-color: rgb(245,245,245);
}
.txtVolkswawen{
    -fx-text-fill: #000000;
    -fx-font-size: 18px;
    -fx-font-family: Arial; 
    
    
}

.txtVolkswawenMexico{
    -fx-text-fill: #000000;
    -fx-font-size: 12px;
    -fx-font-family: Arial; 
}
.txtSMS{
    -fx-text-fill: #1859a7;
    -fx-font-weight: bold;
    -fx-font-size: 22px;
    -fx-font-family: Arial; 
}
.txtTitulosSecciones{
    -fx-text-fill: #1859a7;
    -fx-font-weight: bold;
    -fx-font-size: 14px;
    -fx-font-family: Arial;
}
.txtPie{
    -fx-text-fill: #1859a7;
    -fx-font-weight: bold;
    -fx-font-size: 12px;
    -fx-font-family: Arial;
}
.linea{
    -fx-scale-x: 6px;
    -fx-alignment: CENTER;
    
}

.table-view {
    -fx-background-color: -fx-box-border, -fx-control-inner-background;
    -fx-background-insets: 0,1;

    /* There is some oddness if padding is in em values rather than pixels,
       in particular, the left border of the control doesn't show. */
    -fx-padding: 1; /* 0.083333em; */

    /* Constants used throughout the tableview.
     * TODO: Should these be derived from the palette in .scene?
     */
    -fx-table-header-border-color: #959595;
/*    -fx-table-header-background-color: linear (0%,0%) to (0%,100%) stops (80%, #bbbbbb) (10%, #f6f6f6);*/
    -fx-table-cell-border-color: #bbbbbb;
}

.txtEtiquetaError{
    -fx-text-fill: #ff3333;
}

.errorMessage{
   -fx-background-color: red;
}